Obesidade3Activity

package br.feccapccp.novoimc;

import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;
import android.widget.TextView;
import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

public class Obesidade3Activity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_obesidade3);

        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            v.setPadding(insets.getInsets(WindowInsetsCompat.Type.systemBars()).left,
                    insets.getInsets(WindowInsetsCompat.Type.systemBars()).top,
                    insets.getInsets(WindowInsetsCompat.Type.systemBars()).right,
                    insets.getInsets(WindowInsetsCompat.Type.systemBars()).bottom);
            return insets;
        });

        // Associar elementos da interface
        TextView textResultado = findViewById(R.id.textResultado);
        TextView textRaltura = findViewById(R.id.textRaltura);
        TextView textRpeso = findViewById(R.id.textRpeso);
        TextView textTitulo = findViewById(R.id.textTitulo);
        TextView textObesidade3 = findViewById(R.id.textObesidade3);
        Button btnFechar = findViewById(R.id.btnFechar);

        // Receber dados da Intent
        Intent intent = getIntent();
        String imcResultado = intent.getStringExtra("IMC_Resultado");
        String altura = intent.getStringExtra("Altura");
        String peso = intent.getStringExtra("Peso");

        // Atualizar TextViews com os dados recebidos
        textResultado.setText("Seu IMC: " + imcResultado);
        textRaltura.setText("Altura: " + altura + " m");
        textRpeso.setText("Peso: " + peso + " kg");
